<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Deadline_Countdown" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
<!--         <item name="black">@color/my_light_primary</item>-->
        <item name="android:statusBarColor" >@color/og_white</item>
    </style>

    <style name="Theme.Deadline_Countdown" parent="Base.Theme.Deadline_Countdown" />

    <style name="header">
        <item name="android:textColor">@color/og_black</item>
<!--        <item name="android:background">@color/og_white</item>-->
        <item name="android:fontFamily">@font/aladin_regular</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textSize">36sp</item>
    </style>
    
    
    <style name="background">
        <item name="background">@drawable/og_background</item>
    </style>

    <style name="task">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:background">@drawable/task_background</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:padding">5dp</item>
<!--        <item name="android:backgroundTint">@color/og_white</item>-->
</style>

    <style name="options">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:background">@drawable/setting_options_input_bg</item>
        <item name="android:textColor">@color/og_black</item>
    </style>

    <style name="inputs">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:background">@drawable/setting_options_input_bg</item>
        <item name="android:textColor">@color/og_black</item>
        <item name="hintTextColor">@color/og_cream</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="switch_bud">
        <item name="color">@color/og_grey</item>
    </style>

    <style name="bottom_bar">
        <item name="android:fontFamily">@font/robotoslab_medium</item>
        <item name="android:background">@android:color/transparent</item>
<!--        <item name="android:background">@color/og_cream</item>-->
    </style>

    <style name="checkbox">
<!--        android:clickable="true"-->
<!--        android:focusable="true"-->
<!--        android:background="@drawable/checkbox_selector_format"-->
<!--        android:button="@drawable/cb_show_hide_selector"-->
<!--        android:textColor="@color/checkbox_text"-->
<!--        android:text="this is a checkbox"-->
        <item name="android:fontFamily">@font/robotoslab_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/og_cream</item>
        <item name="android:button">@drawable/checkbox_selector_format</item>
        <item name="android:background">@drawable/checkbox_selector_format</item>
    </style>

    <style name="checkbox_color">
        <item name="android:fontFamily">@font/robotoslab_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:button">@drawable/checkbox_selector_color</item>
        <item name="android:background">@drawable/checkbox_selector_color</item>
    </style>

    <style name="save_button">
        <item name="android:background">@drawable/save_button_bg</item>
        <item name="android:textColor">@color/og_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/robotoslab_medium</item>
    </style>

    <style name="date_time">
        <item name="android:background">@drawable/date_time_buttons</item>
        <item name="android:textColor">@color/og_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
    </style>


</resources>
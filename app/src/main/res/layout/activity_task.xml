<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity"
    android:background="@drawable/og_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/header"
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/left_guideline">
        <TextView
            android:id="@+id/header_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Set a timer"
            style="@style/header"/>
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/settings_color_option"
        style="@style/inputs"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:hint="Name your task..."
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        app:layout_constraintRight_toLeftOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        />

    <TextView
        android:id="@+id/pick_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a color for it..."
        android:layout_marginTop="30dp"
        android:textColor="@color/og_cream"

        app:layout_constraintTop_toBottomOf="@id/settings_color_option"
        app:layout_constraintLeft_toRightOf="@id/left_text_guideline" />



    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/color_layout"
        android:layout_width="0dp"
        android:layout_height="60sp"
        android:layout_marginTop="15dp"

        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="space_around"
        app:justifyContent="space_between"

        app:layout_constraintTop_toBottomOf="@id/pick_color"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline">
        <ImageView
            android:id="@+id/task_color_1"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:background="@drawable/task_background"
            android:backgroundTint="@color/og_grey"
            android:contentDescription="TODO"

            />
        <ImageView
            android:id="@+id/task_color_2"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:background="@drawable/task_background"
            android:backgroundTint="@color/og_green"
            android:contentDescription="TODO"

            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/task_color_3"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:background="@drawable/task_background"
            android:backgroundTint="@color/og_white"
            android:contentDescription="TODO"


            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/task_color_4"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:background="@drawable/task_background"
            android:backgroundTint="@color/og_orange"
            android:contentDescription="TODO"
            app:layout_constraintLeft_toRightOf="@id/task_color_3"
            tools:ignore="MissingConstraints"

            />

    </com.google.android.flexbox.FlexboxLayout>



    <TextView
        android:id="@+id/which"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which format do you want the countdown to be in..."
        android:layout_marginTop="30dp"
        android:textColor="@color/og_cream"
        app:layout_constraintTop_toBottomOf="@id/color_layout"
        app:layout_constraintLeft_toLeftOf="@id/left_text_guideline"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/pick_format"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        app:layout_constraintTop_toBottomOf="@+id/which"
        app:layout_constraintLeft_toLeftOf="@id/left_guideline"
        app:layout_constraintRight_toRightOf="@id/right_guideline"

        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="space_around"
        app:justifyContent="space_between"
        >

        <TextView
            android:id="@+id/format_month"
            style="@style/inputs"
            android:textSize="12sp"
            android:layout_width="55sp"
            android:layout_height="40sp"
            android:text="Month"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/format_week"
            style="@style/inputs"
            android:textSize="12sp"
            android:layout_width="55sp"
            android:layout_height="40sp"
            android:text="Week"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/format_day"
            style="@style/inputs"
            android:textSize="12sp"
            android:layout_width="55sp"
            android:layout_height="40sp"
            android:text="Day"
            android:textAlignment="center"

            />
        <TextView
            android:id="@+id/format_hour"
            style="@style/inputs"
            android:textSize="12sp"
            android:layout_width="55sp"
            android:layout_height="40sp"
            android:text="Hour"
            android:textAlignment="center"
            />
        <TextView
        android:id="@+id/format_min"
        style="@style/inputs"
        android:textSize="12sp"
        android:layout_width="55sp"
        android:layout_height="40sp"
        android:text="Min"
            android:textAlignment="center"
        />
        <TextView
            android:id="@+id/format_sec"
            style="@style/inputs"
            android:textSize="12sp"
            android:layout_width="55sp"
            android:layout_height="40sp"
            android:text="Sec"
            android:textAlignment="center"
            />




    </com.google.android.flexbox.FlexboxLayout>














    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_text_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>


</androidx.constraintlayout.widget.ConstraintLayout>